<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/color_picker_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="colorClicked"
            android:src="@drawable/ic_lens_black_24dp">

        </ImageView>


        <ImageView
            android:id="@+id/color_picker_gray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="colorClicked"
            android:src="@drawable/ic_lens_black_24dp">

        </ImageView>


        <ImageView
            android:id="@+id/color_picker_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="colorClicked"
            android:src="@drawable/ic_lens_black_24dp">

        </ImageView>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/color_picker_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="colorClicked"
            android:src="@drawable/ic_lens_black_24dp">

        </ImageView>


        <ImageView
            android:id="@+id/color_picker_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="colorClicked"
            android:src="@drawable/ic_lens_black_24dp">

        </ImageView>


        <ImageView
            android:id="@+id/color_picker_pink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="colorClicked"
            android:src="@drawable/ic_lens_black_24dp">

        </ImageView>
    </LinearLayout>

</LinearLayout>